<section class="py-20 bg-gradient-to-br from-dark to-darkest">
  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-100 mb-4">
        Why Choose Galaxy Painting?
      </h2>
      <p class="text-xl text-slate-300">
        We're committed to delivering exceptional painting services that exceed your expectations. Here's what sets us apart from the competition.
      </p>
    </div>

    <!-- Reasons Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8">
      {reasons.map((reason) => (
        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-accent text-darkest rounded-full mb-4 group-hover:scale-110 group-hover:bg-yellow-400 transition-all duration-300 shadow-lg">
            <Fragment set:html={reason.icon} />
          </div>
          <h3 class="text-lg font-bold text-slate-100 mb-2">
            {reason.title}
          </h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            {reason.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="mt-16 text-center">
      <div class="bg-dark rounded-2xl shadow-xl p-8 md:p-12 max-w-4xl mx-auto border border-slate-700">
        <h3 class="text-3xl font-bold text-slate-100 mb-4">
          Ready to Transform Your Space?
        </h3>
        <p class="text-xl text-slate-300 mb-8">
          Join hundreds of satisfied customers who trust us with their painting needs.
        </p>
        <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
          <a href="#contact" class="w-full sm:w-auto bg-accent text-darkest px-8 py-4 rounded-lg font-bold hover:bg-yellow-400 transition shadow-lg">
            Get Free Estimate
          </a>
          <a href="tel:+18125573291" class="w-full sm:w-auto border-2 border-accent text-accent px-8 py-4 rounded-lg font-bold hover:bg-accent/10 transition">
            Call Now
          </a>
        </div>
      </div>
    </div>

  </div>
</section>
