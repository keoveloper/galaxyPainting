---
// src/components/Testimonials.astro
const testimonials = [
  {
    name: "Sarah Johnson",
    service: "Interior Painting",
    rating: 5,
    text: "Absolutely fantastic work! The team was professional, clean, and finished on time. My living room looks amazing. Highly recommend their services!",
    location: "Austin, TX",
    date: "March 2025"
  },
  {
    name: "Michael Chen",
    service: "Exterior Painting",
    rating: 5,
    text: "Best painting company I've worked with. They transformed my home's exterior and the attention to detail was impressive. Fair pricing too!",
    location: "Dallas, TX",
    date: "February 2025"
  },
  {
    name: "Jennifer Martinez",
    service: "Commercial Painting",
    rating: 5,
    text: "Painted our entire office over the weekend with zero disruption to our business. Professional, efficient, and the quality is outstanding.",
    location: "Houston, TX",
    date: "January 2025"
  },
  {
    name: "David Thompson",
    service: "Cabinet Painting",
    rating: 5,
    text: "My kitchen cabinets look brand new! They saved me thousands compared to replacement. The craftsmanship is top-notch. Very happy!",
    location: "San Antonio, TX",
    date: "December 2024"
  },
  {
    name: "Lisa Anderson",
    service: "Residential Painting",
    rating: 5,
    text: "From estimate to completion, everything was smooth. They were respectful of our home and the cleanup was thorough. Will definitely use again!",
    location: "Fort Worth, TX",
    date: "November 2024"
  },
  {
    name: "Robert Wilson",
    service: "Deck Staining",
    rating: 5,
    text: "Excellent work on our deck. They prepped everything properly and the stain looks beautiful. Great communication throughout the project.",
    location: "Plano, TX",
    date: "October 2024"
  }
];
---

<section id="testimonials" class="py-20 bg-gradient-to-b from-dark to-darkest">
  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-100 mb-4">
        What Our Customers Say
      </h2>
      <p class="text-xl text-slate-300 mb-6">
        Don't just take our word for it. See what our satisfied customers have to say about our painting services.
      </p>
      
      <!-- Google Rating -->
      <div class="inline-flex items-center space-x-3 bg-dark rounded-full px-6 py-3 shadow-lg border border-slate-700">
        <div class="flex space-x-1">
          {[1, 2, 3, 4, 5].map(() => (
            <svg class="w-6 h-6 text-accent fill-current" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <div class="text-left">
          <div class="font-bold text-slate-100">4.9 out of 5</div>
          <div class="text-sm text-slate-400">Based on 127 reviews</div>
        </div>
      </div>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {testimonials.map((testimonial) => (
        <div class="bg-dark rounded-2xl shadow-lg p-8 hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-700">
          
          <!-- Stars -->
          <div class="flex mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="w-5 h-5 text-accent fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          
          <!-- Quote Icon -->
          <div class="mb-4">
            <svg class="w-10 h-10 text-slate-700" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          
          <!-- Review Text -->
          <p class="text-slate-300 mb-6 leading-relaxed italic">
            "{testimonial.text}"
          </p>
          
          <!-- Client Info -->
          <div class="border-t border-slate-700 pt-4">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-gradient-to-br from-accent to-yellow-400 rounded-full flex items-center justify-center text-darkest font-bold text-lg">
                {testimonial.name.charAt(0)}
              </div>
              <div>
                <div class="font-bold text-slate-100">{testimonial.name}</div>
                <div class="text-sm text-slate-400">{testimonial.location}</div>
              </div>
            </div>
            <div class="mt-3 flex items-center justify-between text-sm">
              <span class="text-accent font-semibold">{testimonial.service}</span>
              <span class="text-slate-500">{testimonial.date}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Google Reviews CTA -->
    </div>

  </div>
</section>
