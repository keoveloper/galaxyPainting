---
// src/components/Process.astro
const steps = [
  {
    number: "01",
    title: "Free Estimate",
    description: "Contact us for a free consultation. We'll visit your property to assess the project and discuss your vision and requirements.",
    icon: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/></svg>`
  },
  {
    number: "02",
    title: "Custom Proposal",
    description: "Receive a detailed quote with transparent pricing. We'll help you choose the perfect colors and discuss the project timeline.",
    icon: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/><path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/></svg>`
  },
  {
    number: "03",
    title: "Professional Painting",
    description: "Our experienced crew arrives on time with all necessary equipment. We protect your property and deliver quality workmanship.",
    icon: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/></svg>`
  },
  {
    number: "04",
    title: "Final Walkthrough",
    description: "We conduct a thorough walkthrough to ensure you're completely satisfied. Complete cleanup is included with every project.",
    icon: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>`
  }
];
---

<section class="py-20 bg-gradient-to-b from-dark to-darkest">
  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-100 mb-4">
        Our Simple 4-Step Process
      </h2>
      <p class="text-xl text-slate-300">
        From initial consultation to final walkthrough, we make the painting process smooth and stress-free.
      </p>
    </div>

    <!-- Steps -->
    <div class="max-w-6xl mx-auto">
      {steps.map((step, index) => (
        <div class="relative mb-12 last:mb-0">
          
          <!-- Connector Line (except last) -->
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute left-[70px] top-[140px] w-0.5 h-full bg-gradient-to-b from-accent to-yellow-400"></div>
          )}

          <div class="flex flex-col md:flex-row items-start gap-6 md:gap-8">
            
            <!-- Step Number & Icon -->
            <div class="flex-shrink-0">
              <div class="relative">
                {/* Number Badge */}
                <div class="w-[140px] h-[140px] rounded-full bg-gradient-to-br from-accent to-yellow-400 flex items-center justify-center shadow-2xl">
                  <div class="text-center">
                    <div class="text-darkest/80 text-sm font-semibold mb-1">STEP</div>
                    <div class="text-5xl font-bold text-darkest">{step.number}</div>
                  </div>
                </div>
                
                {/* Icon Badge */}
                <div class="absolute -bottom-3 -right-3 w-16 h-16 bg-dark rounded-full flex items-center justify-center shadow-lg border-4 border-slate-700 text-accent">
                  <Fragment set:html={step.icon} />
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="flex-1 bg-dark rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300 border border-slate-700">
              <h3 class="text-2xl md:text-3xl font-bold text-slate-100 mb-4">
                {step.title}
              </h3>
              <p class="text-lg text-slate-300 leading-relaxed">
                {step.description}
              </p>
            </div>

          </div>
        </div>
      ))}
    </div>
  </div>
</section>
