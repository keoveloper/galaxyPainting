---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="bg-darkest text-white">
  
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2 mb-6">
          <div>
            <div class="font-bold text-lg text-slate-100">Galaxy Painting</div>
            <div class="text-xs text-slate-400">Professional Services</div>
          </div>
        </div>
        <p class="text-slate-400 leading-relaxed text-sm">
          Professional painting services for residential and commercial properties across Texas. Quality workmanship guaranteed.
        </p>
        <div class="flex items-center space-x-2 text-sm text-slate-400 pt-2">
          <svg class="w-4 h-4 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Licensed & Insured • Lic #123456</span>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-bold text-lg mb-6 text-slate-100">Quick Links</h4>
        <ul class="space-y-3">
          <li>
            <a href="#home" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Home</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Services</span>
            </a>
          </li>
          <li>
            <a href="#gallery" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Gallery</span>
            </a>
          </li>
          <li>
            <a href="#about" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">About Us</span>
            </a>
          </li>
          <li>
            <a href="#testimonials" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Reviews</span>
            </a>
          </li>
          <li>
            <a href="#faq" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">FAQ</span>
            </a>
          </li>
          <li>
            <a href="#contact" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Contact</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-bold text-lg mb-6 text-slate-100">Our Services</h4>
        <ul class="space-y-3">
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Interior Painting</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Exterior Painting</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Commercial Painting</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Residential Painting</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Cabinet Painting</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Deck Staining</span>
            </a>
          </li>
          <li>
            <a href="#services" class="text-slate-400 hover:text-accent transition-colors duration-200 text-sm flex items-center group">
              <span class="group-hover:translate-x-1 transition-transform duration-200">Drywall Repair</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-bold text-lg mb-6 text-slate-100">Contact Us</h4>
        <ul class="space-y-4">
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <div>
