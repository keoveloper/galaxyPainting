---
// src/components/ServiceArea.astro
const statesCities = {
  "Kentucky": ["Louisville", "Lexington", "Bowling Green", "Owensboro", "Covington", "Richmond"],
  "Indiana": ["Indianapolis", "Fort Wayne", "Evansville", "South Bend", "Carmel", "Bloomington"],
  "Ohio": ["Columbus", "Cleveland", "Cincinnati", "Toledo", "Akron", "Dayton"]
};
---

<section class="py-20 bg-darkest">
  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-100 mb-4">
        Areas We Serve
      </h2>
      <p class="text-xl text-slate-300">
        Proudly serving <span class="font-bold text-accent">Kentucky, Indiana, and Ohio</span> with professional painting services
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">

      <!-- Map Side -->
      <div class="order-1 lg:order-1">
        <div class="relative">
          <!-- Google Maps Embed -->
          <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99425.11736218748!2d-85.90979872089843!3d38.30580097911158!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x886907b5bfa7b0c5%3A0x59e7be911e3c3d7e!2sNew%20Albany%2C%20IN%2047150%2C%20USA!5e0!3m2!1sen!2smx!4v1731203000000!5m2!1sen!2smx"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Service Area Map - New Albany, Indiana 47150"
              ></iframe>
          </div>

          <!-- Stats Overlay -->
          <div class="absolute -bottom-6 left-1/2 transform -translate-x-1/2 w-full max-w-md">
            <div class="bg-dark rounded-xl shadow-2xl p-6 border border-slate-700">
              <div class="grid grid-cols-3 gap-4 text-center">
                <div>
                  <div class="text-3xl font-bold text-accent">3</div>
                  <div class="text-sm text-slate-400">States</div>
                </div>
                <div>
                  <div class="text-3xl font-bold text-accent">18+</div>
                  <div class="text-sm text-slate-400">Cities</div>
                </div>
                <div>
                  <div class="text-3xl font-bold text-accent">24/7</div>
                  <div class="text-sm text-slate-400">Available</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Cities List Side -->
      <div class="order-2 lg:order-2">
        <div class="mb-8">
          <h3 class="text-2xl font-bold text-slate-100 mb-4">
            Cities We Serve
          </h3>
          <p class="text-slate-300 leading-relaxed">
            We provide professional painting services throughout Kentucky, Indiana, and Ohio. Whether you're in a major city or surrounding area, our experienced team is ready to transform your space.
          </p>
        </div>

        <!-- Cities by State -->
        <div class="space-y-6 mb-8">
          {Object.entries(statesCities).map(([state, cities]) => (
          <div>
            <h4 class="text-lg font-bold text-accent mb-3">{state}</h4>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
              {cities.map((city) => (
              <div class="flex items-center space-x-2 bg-dark rounded-lg p-3 hover:bg-slate-800 transition group border border-slate-700">
                <svg class="w-4 h-4 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-300 font-medium group-hover:text-accent transition">{city}</span>
              </div>
              ))}
            </div>
          </div>
          ))}
        </div>

        <!-- Additional Info -->
        <div class="bg-gradient-to-r from-accent/80 to-yellow-400/80 rounded-xl p-6 text-darkest">
          <h4 class="text-xl font-bold mb-3">Don't See Your City?</h4>
          <p class="mb-4 text-yellow-900">
          We frequently expand our service area. Contact us to see if we can help with your project!
          </p>
          <a href="#contact" class="inline-block bg-dark text-slate-100 px-6 py-2 rounded-lg font-semibold hover:bg-slate-800 transition">
            Contact Us
          </a>
        </div>
      </div>

    </div>

  </div>
</section>
