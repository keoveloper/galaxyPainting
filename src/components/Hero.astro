<section id="home" class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-darkest via-dark to-darkest pt-20">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23d2a034\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-5xl mx-auto text-center">
      
      <!-- Badge -->
      <div class="inline-flex items-center space-x-2 bg-medium text-slate-200 px-4 py-2 rounded-full mb-6 animate-bounce">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span class="font-semibold">Licensed & Insured â€¢ BBB Accredited</span>
      </div>

      <!-- Main Heading -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-slate-100 mb-6 leading-tight">
        Professional Painting Services in
        <span class="text-accent">Your City</span>
      </h1>

      <!-- Subheading -->
      <p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-3xl mx-auto leading-relaxed">
        Transform your home or business with quality painting. Residential & Commercial experts with 10+ years of experience.
      </p>

      <!-- Key Points -->
      <div class="flex flex-wrap justify-center gap-4 md:gap-6 mb-10 text-sm md:text-base">
        <div class="flex items-center space-x-2 text-slate-300">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold">Free Estimates</span>
        </div>
        <div class="flex items-center space-x-2 text-slate-300">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold">Same-Day Response</span>
        </div>
        <div class="flex items-center space-x-2 text-slate-300">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold">Satisfaction Guaranteed</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
        <a 
          href="#contact" 
          class="w-full sm:w-auto bg-accent text-darkest px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-400 transition shadow-xl hover:shadow-2xl hover:scale-105 transform duration-300"
        >
          Get Your Free Estimate
        </a>
        
        <a 
          href="tel:+15555551234" 
          class="w-full sm:w-auto bg-dark text-accent px-8 py-4 rounded-lg font-bold text-lg hover:bg-slate-800 transition border-2 border-accent shadow-lg hover:shadow-xl flex items-center justify-center space-x-2"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span>Call: (555) 555-1234</span>
        </a>
      </div>

      <!-- Trust Stats -->
      <div class="mt-16 pt-8 border-t border-slate-700">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">10+</div>
            <div class="text-slate-400 font-medium">Years Experience</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">500+</div>
            <div class="text-slate-400 font-medium">Happy Clients</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">4.9</div>
            <div class="text-slate-400 font-medium">Google Rating</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">100%</div>
            <div class="text-slate-400 font-medium">Satisfaction</div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>
