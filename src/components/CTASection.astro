---
// src/components/CTASection.astro
---

<section class="relative py-24 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 bg-cover bg-center bg-fixed" style="background-image: url('https://images.unsplash.com/photo-1589939705384-5185137a7f0f?w=1920');">
    <div class="absolute inset-0 bg-gradient-to-r from-darkest/95 to-dark/90"></div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Badge -->
      <div class="inline-flex items-center space-x-2 bg-medium/10 backdrop-blur-sm text-slate-200 px-6 py-2 rounded-full mb-6">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        <span class="font-semibold">4.9/5 Stars â€¢ 500+ Reviews</span>
      </div>

      <!-- Main Heading -->
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-slate-100 mb-6 leading-tight">
        Ready to Transform Your Space?
      </h2>

      <!-- Subheading -->
      <p class="text-xl md:text-2xl text-slate-300 mb-10 leading-relaxed">
        Get a free, no-obligation estimate today. Our expert team is ready to bring your vision to life with quality painting services you can trust.
      </p>

      <!-- Key Benefits -->
      <div class="flex flex-wrap justify-center gap-6 mb-12">
        <div class="flex items-center space-x-2 text-slate-200">
          <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold text-lg">Free Estimates</span>
        </div>
        <div class="flex items-center space-x-2 text-slate-200">
          <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold text-lg">Licensed & Insured</span>
        </div>
        <div class="flex items-center space-x-2 text-slate-200">
          <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold text-lg">Same-Day Response</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
        <a 
          href="#contact" 
          class="group w-full sm:w-auto bg-accent text-darkest px-10 py-5 rounded-xl font-bold text-lg hover:bg-yellow-400 transition shadow-2xl hover:shadow-3xl transform hover:scale-105 duration-300 flex items-center justify-center space-x-2"
        >
          <span>Get Your Free Quote</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        
        <a 
          href="tel:+15555551234" 
          class="w-full sm:w-auto bg-transparent text-accent border-2 border-accent px-10 py-5 rounded-xl font-bold text-lg hover:bg-accent hover:text-darkest transition shadow-xl flex items-center justify-center space-x-2"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span>Call: (555) 555-1234</span>
        </a>
      </div>

      <!-- Trust Indicator -->
      <div class="mt-12 text-slate-300">
        <p class="text-lg">
          <span class="font-semibold text-slate-100">Over 500 satisfied customers</span> trust us with their painting needs
        </p>
      </div>

    </div>
  </div>
</section>
